<% if @query == nil %>
  <h3>Please enter search criteria</h3>
<% else %>
  <% if @categories.any? %>
    <h3>Categories</h3>
    <% @categories.each do |category| %>
      <%= category.name %>
    <% end %><br>
  <% end %>

  <% if @merchants.any?  %>
    <h3>Merchants</h3>
    <% @merchants.each do |merchant| %>
      <%= merchant.name %>
    <% end %><br>
  <% end %>

  <% if @items.any? %>
    <h3>Items</h3>
    <% @items.each do |item| %>
      <%= item.title %>
    <% end %>
  <% end %>
<% end %>
