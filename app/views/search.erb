<% if @query == nil %>
  <h3>Please enter search criteria</h3>
<% else %>
  <% if @categories.any? %>
    <h3>Categories</h3>
    <% @categories.each do |category| %>
      <a href="merchants/<%= category.id %>"><%= category.name %></a>,
    <% end %><br>
  <% end %>

  <% if @merchants.any?  %>
    <h3>Merchants</h3>
    <% @merchants.each do |merchant| %>
      <a href="merchants/<%= merchant.id %>"><%= merchant.name %></a>,
    <% end %><br>
  <% end %>

  <% if @items.any? %>
    <h3>Items</h3>
    <% @items.each do |item| %>
      <a href="items/<%= item.id %>"><%= item.title %></a>,
    <% end %>
  <% end %>
<% end %>
